{% extends 'base.html.twig' %}

{% block title %}CarService{% endblock %}
{% block style %}
     body{
        font-family:Arial;  
    }
     .parallax{
        background-image: url("../../white.jpg");
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        min-height: 100%;
    }
    .button {
        background-color: #af4c4c; /* Green */
        border: none;
        color: white;
        padding: 7px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin: 3px 1px;
        cursor: pointer;
        -webkit-transition-duration: 0.4s; /* Safari */
        transition-duration: 0.4s;
        border-radius:10px;
        margin-left:50px;
    }
    .button2:hover {
        box-shadow: 0 8px 13px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
    }
    .button3{
        padding:15px;
        font-size: 20px;
        margin-top:50px;
        margin-bottom:50px;
        margin-left:45%;
    }
    a:link, a:visited {
       color:white;
       text-decoration: none;
    }
    table {
        border-collapse: collapse;
        width: 90%;
        margin-left:50px;
    }
    th, td {
        text-align: left;
        padding: 10px;  
    }

    tr:nth-child(even){
    background-color: #f2f2f2;
    }

    th {
        background-color: #af4c4c;
        color: white;  
    }
    .ds{
        width:60%;
    }
    .div{
        text-align:center;
        font-size: 50px;
        font-family:Verdana;
        text-shadow: 2px 2px 5px red;
        padding:5px;
        margin-bottom:5px;
        color:#7a3535;
    }
    .div1{
        margin:150px 150px 150px 150px;        
        background-color: #f2f2f2;
        padding:100px;
        opacity:0.7;
    }
     .div1:hover{
        opacity:0.9;
    }
{% endblock %}
{% block body %}
 <body class="parallax">
   <div class="div">Car Service</div>
    <br> 
 <div style="font-size:20px; margin-left: 50px;">See the services from your plate number.
   
 </div>
   <br> 
 <table >
  <tr>
    
    <th>Title</th> 
    <th>Price</th>
    <th>Description</th>
    <th>Service Date</th>
   
   {% for key in viewServices %}
  <tr>
   
    <td>{{ key.title }}</td>
    <td>{{ key.price }}</td>
    <td class="ds">{{ key.description }}</td>
    <td>{{ key.serviceDate|date('Y-m-d H-i-s') }}</td>
  </tr>
  
  {% endfor %}
 
 </table>
 <div class="div1"><p style="text-align: center; font-size: 20px;">Go back to car list.</p>
       <br> 
  <button class="button button2 button3"><a href="/car">Car List</a></button>
   </div>
    </body>
{% endblock %}